<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:gravity="center"
    android:orientation="vertical">
    <!--android:background="@color/bg"-->

    <TextView
        android:id="@+id/message_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:textColor="#888C92"
        android:textSize="@dimen/small_text"
        android:text="@string/no_network1"/>

    <TextView
        android:id="@+id/message_info_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/textContentColor"
        android:textSize="@dimen/micro_text"
        android:text="别紧张,试试刷新页面..."/>

    <Button
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btnReload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6282FF"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:text="重新加载"
        android:textSize="@dimen/big_small_text1"
        android:textColor="@color/White"></Button>
</LinearLayout>